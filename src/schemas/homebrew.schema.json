{
  "$ref": "#rootItem",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "homebrew": {
      "$id": "#homebrew",
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "enum": [
                  "subclass",
                  "subrace"
                ],
                "type": "string"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "required": [
              "subtype"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "enum": [
                  "spell"
                ],
                "type": "string"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "properties": {
              "level": {
                "maximum": 9,
                "minimum": 0,
                "type": "integer"
              }
            },
            "required": [
              "level"
            ]
          }
        },
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "balance": {
                    "maximum": -3,
                    "minimum": -5
                  }
                },
                "required": [
                  "balance"
                ]
              },
              {
                "properties": {
                  "balance": {
                    "maximum": 5,
                    "minimum": 3
                  }
                },
                "required": [
                  "balance"
                ]
              }
            ]
          },
          "then": {
            "required": [
              "notes"
            ]
          }
        }
      ],
      "properties": {
        "balance": {
          "maximum": 5,
          "minimum": -5,
          "type": "integer"
        },
        "changes": {
          "minLength": 1,
          "type": "string"
        },
        "gsheet": {
          "type": "boolean"
        },
        "name": {
          "minLength": 1,
          "type": "string"
        },
        "notes": {
          "minLength": 1,
          "type": "string"
        },
        "subtype": {
          "minLength": 1,
          "type": "string"
        },
        "tags": {
          "items": {
            "enum": [
              "magic",
              "digital",
              "souls",
              "revival",
              "nonmechanical",
              "joke",
              "external",
              "divine",
              "broken-link",
              "replica",
              "incomplete",
              "pathfinder",
              "complicated"
            ],
            "type": "string"
          },
          "minLength": 1,
          "type": "array"
        },
        "type": {
          "enum": [
            "spell",
            "feat",
            "class",
            "expansion",
            "race",
            "background",
            "familiar",
            "subclass",
            "subrace"
          ],
          "type": "string"
        }
      },
      "required": [
        "name",
        "balance",
        "type"
      ],
      "type": "object"
    },
    "rootItem": {
      "$id": "#rootItem",
      "oneOf": [
        {
          "$ref": "#homebrew",
          "properties": {
            "link": {
              "format": "uri",
              "type": "string"
            }
          },
          "required": [
            "link"
          ],
          "type": "object"
        },
        {
          "properties": {
            "items": {
              "items": {
                "$ref": "#homebrew"
              },
              "type": "array"
            },
            "link": {
              "format": "uri",
              "type": "string"
            },
            "name": {
              "minLength": 1,
              "type": "string"
            },
            "type": {
              "enum": [
                "compendium"
              ],
              "type": "string"
            }
          },
          "required": [
            "name",
            "link",
            "type",
            "items"
          ],
          "type": "object"
        }
      ],
      "type": "object"
    }
  }
}
