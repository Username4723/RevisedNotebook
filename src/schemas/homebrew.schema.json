{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "homebrew": {
      "$id": "#homebrew",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [ "spell", "feat", "class", "expansion", "race", "background", "familiar", "subclass", "subrace" ]
        },
        "tags": {
          "type": "array",
          "minLength": 1,
          "items": {
            "type": "string",
            "enum": [ "magic", "digital", "souls", "revival", "nonmechanical", "joke", "external" ]
          }
        },
        "subtype": {
          "type": "string",
          "minLength": 1
        },
        "link": {
          "type": "string",
          "format": "uri"
        },
        "balance": {
          "type": "integer",
          "minimum": -5,
          "maximum": 5
        },
        "notes": {
          "type": "string",
          "minLength": 1
        },
        "changes": {
          "type": "string",
          "minLength": 1
        },
        "completed": {
          "type": "boolean"
        }
      },
      "required": [ "name", "link" ],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "subclass", "subrace" ]
              }
            },
            "required": [ "type" ]
          },
          "then": {
            "required": [ "subtype" ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "spell" ]
              }
            },
            "required": [ "type" ]
          },
          "then": {
            "required": [ "level" ],
            "properties": {
              "level": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9
              }
            }
          }
        },
        {
          "if": {
            "anyOf": [
              {
                "properties": {
                  "balance": {
                    "minimum": -5,
                    "maximum": -3
                  }
                },
                "required": [ "balance" ]
              },
              {
                "properties": {
                  "balance": {
                    "minimum": 3,
                    "maximum": 5
                  }
                },
                "required": [ "balance" ]
              }
            ]
          },
          "then": {
            "required": [ "notes" ]
          }
        }
      ]
    }
  },

  "$ref": "#homebrew"
}
